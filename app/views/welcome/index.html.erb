<div class="row well well-transparent">	
	<div class="row text-center">
		<h1>
			Welcome to Juicebox <br />
			<small>Hey are you juicin it?</small> 
		</h1>
		
		<!-- Nav Menu -->
		<div class="">
			<button class="btn btn-success btn-lg" type="button" data-toggle="modal" data-target="#juiceModal">
				Juice?
			</button>
			<%= link_to "About", about_path, :class => "btn btn-info btn-lg" %> <br /><br /><br />
		</div>
	</div>




	<div class="row text-center">
		<p class="large">üçπ You have 1 juice! üçπ</p>
		<%= image_tag "juiceHeadTop.png", :class => "img-responsive center-block img-rounded talkingHead" %>
		<%= image_tag "juiceHeadMouth.png", :id => "mouth", :class => "img-responsive center-block img-rounded talkingHead" %>
	</div>


</div>

<div class="row well well-transparent">
	<div class="col-md-6 col-md-offset-3">
		<% @audioList.each do |fileName| %>
			<%= button_tag(type: 'button', :class => "btn btn-primary col-xs-12 col-sm-6 #{fileName}") do %>
				<i class="fa fa-play"></i> <%= content_tag(:strong, fileName) %>
				<%= audio_tag(@baseURL+fileName+".mp3", :class => "audio-play #{fileName}",  preload: true, autobuffer: true, autoplay: false, controls: false, looping: false) %>
			<% end %>
		<% end %>
	</div>
</div>

<!-- Hidden Elements-->


	<!-- Modal -->
	<div class="modal fade" id="juiceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
        	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       		<h4 class="modal-title"><%= "üçπ" * 15%></h4>
      	  </div>
	      <div class="modal-body">
	        <iframe width="100%" height="600" src="https://www.youtube.com/embed/gx-NLPH8JeM" frameborder="0" allowfullscreen></iframe>	
	      </div>
	    </div>
	  </div>
	</div>